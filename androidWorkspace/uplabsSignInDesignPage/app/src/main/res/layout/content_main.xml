<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0009ff">

    <TextView

        android:textSize="80dp"
        android:layout_marginTop="10dp"
        android:hint="Sign in "
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


    <LinearLayout

        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#ffffff">

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="40dp"
            android:hint="Welcome Back"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:hint="Hello there,Sign in to continue"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView

            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:hint="Email or Username"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <EditText

            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
        <EditText

            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Button
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:hint="Forgot Password"
            android:background="@drawable/forgotbutton"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button

            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:hint="Sign in"
            android:background="@drawable/signinbutton"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Don't have account?"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <Button
               android:layout_weight="1"
                android:gravity="left"
                android:hint="sign in"
                android:background="@drawable/forgotbutton"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>